String remoteVer;

bool isNewVersionAvailable() {
  HTTPClient http;
  http.begin(VERSION_URL);
  int httpCode = http.GET();

  if (httpCode == 200) {
    remoteVer = http.getString();
    remoteVer.trim();
    Serial.printf("ğŸ“¦ Remote version: %s | Local version: %s\n", remoteVer.c_str(), FIRMWARE_VERSION);
    return remoteVer != FIRMWARE_VERSION;
  } else {
    Serial.printf("âš ï¸ Failed to check version: %d\n", httpCode);
    return false;  // ì•ˆì „í•˜ê²Œ OTA skip
  }
}

